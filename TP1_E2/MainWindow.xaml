                    <Button Grid.Row="5" Content="Supprimer"  Height="29" HorizontalAlignment="Left" Margin="0,72,0,0" x:Name="Supprimer2" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="btn_SupprimerT_Click"/>
